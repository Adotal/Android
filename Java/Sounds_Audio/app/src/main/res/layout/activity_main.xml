<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_short"
        android:layout_width="206dp"
        android:layout_height="147dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="144dp"
        android:onClick="AudioSoundPool"
        android:text="@string/shortaudio_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_long"
        android:layout_width="207dp"
        android:layout_height="168dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:onClick="AudioMediaPlayer"
        android:text="@string/longaudio_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_short" />
</androidx.constraintlayout.widget.ConstraintLayout>